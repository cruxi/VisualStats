<!DOCTYPE html>
<html>
<head>
  <title>VisualStats</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    "bootstrap.min.css", :media => "all" %>
  <%= javascript_include_tag 'jquery-1.8.3.min.js', 'bootstrap.min.js' %>

</head>
<body>
	<div class="navbar navbar-inverse">
	  <div class="navbar-inner">

	    	<!-- Be sure to leave the brand out there if you want it shown -->
				<%= link_to 'VisualStats', welcomePage_path, :class => 'brand' %>	 
	 			<ul class="nav">
 				 <li><%= link_to 'Repositories', repositories_path %></li>
 				 <li><%= link_to 'Builds', builds_path %></li>
 				 <li><%=link_to 'Commits', commits_path %></li>
 				 <li><%=link_to 'Jobs', jobs_path %></li>
				</ul>
	      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	      </a>
	 
	      <!-- Everything you want hidden at 940px or less, place within here -->
	      <div class="nav-collapse">
	        <!-- .nav, .navbar-search, .navbar-form, etc -->
	      </div>
	 
	  </div>
	</div>

<%= yield %>

</body>
</html>
